          var thumb = $('#thumbnail').val();
          var img = $('#images').val();
          var p_id = $('#province').val();
          var sc_id = $('#sub_category').val();
          var addr = $('#autocomplete').val();
          var dt = $('#phone').val();
          var tg = $('#tag').val().toString();
