          //   province_id: p_id,
          //   thumbnail: thumb,
          //   place_name: p_n,
          //   phone: dt,
          //   address: addr,
          //   tag: tg,
          //   detail: details
          // }
          //
          // console.log(place);


          $.post('http://tlsg.tk/api//place/add',{
